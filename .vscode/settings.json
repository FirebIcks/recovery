{
  "eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
  "eslint.workingDirectories": [
    "packages/asset-config",
    "packages/shared",
    "packages/wallet-derivation",
    "packages/extended-key-recovery",
    "apps/recovery-utility",
    "apps/recovery-relay"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "javascript.suggestionActions.enabled": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.formatting.provider": "black",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "conventionalCommits.scopes": [
    "@fireblocks/recovery-utility",
    "@fireblocks/recovery-relay",
    "@fireblocks/wallet-derivation",
    "@fireblocks/recovery-shared",
    "@fireblocks/extended-key-recovery",
    "@fireblocks/e2e-tests",
    "@fireblocks/asset-config"
  ]
}
