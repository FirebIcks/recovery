{
  "appId": "com.fireblocks.recovery-utility",
  "productName": "Fireblocks Recovery Utility",
  "copyright": "Copyright Â© 2022 Fireblocks",
  "extraMetadata": {
    "name": "Fireblocks Recovery Utility"
  },
  "directories": {
    "output": "dist",
    "buildResources": "resources"
  },
  "files": [
    {
      "from": ".",
      "filter": ["package.json", "app"]
    },
    "!node_modules/**/*.{mk,a,o,h}",
    "!node_modules/server"
  ],
  "extraFiles": [
    {
      "from": "../server/dist",
      "filter": ["__main__", "__main__.exe"]
    }
  ],
  // "afterSign": "electron-builder-notarize",
  "publish": null,
  "mac": {
    "target": "zip",
    "category": "public.app-category.business",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "entitlements": "./entitlements.plist",
    "entitlementsInherit": "./entitlements.plist"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage",
    "category": "Office"
  }
}
