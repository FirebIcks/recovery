{
  "appId": "com.fireblocks.recovery-utility",
  "productName": "Fireblocks Recovery Utility",
  "copyright": "Copyright Â© 2022 Fireblocks",
  "extraMetadata": {
    "name": "Fireblocks Recovery Utility"
  },
  "directories": {
    "output": "dist",
    "buildResources": "resources"
  },
  "files": [
    {
      "from": ".",
      "filter": ["package.json", "app"]
    },
    "!node_modules/**/*.{mk,a,o,h}",
    "!node_modules/server"
  ],
  "extraFiles": [
    {
      "from": "../server/dist",
      "filter": ["server", "server.exe"]
    }
  ],
  "publish": null,
  "mac": {
    "category": "public.app-category.developer-tools"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  }
}
